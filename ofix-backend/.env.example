# Backend Environment Variables

# Configurações do Banco de Dados
# URL de conexão com PostgreSQL - IMPORTANTE: pgbouncer=true resolve problemas de prepared statements
DATABASE_URL="postgresql://username:password@host:port/database?pgbouncer=true&schema=public"
DIRECT_DATABASE_URL="postgresql://username:password@host:port/database?pgbouncer=true&schema=public"

# Configurações JWT
# Chave secreta para assinatura dos tokens JWT (mínimo 32 caracteres)
JWT_SECRET="ofix_super_secure_jwt_secret_key_with_32_plus_characters_for_maximum_security_2024"
JWT_EXPIRES_IN="7d"

# Configurações do Servidor
PORT=1000
NODE_ENV="development"

# ===== CONFIGURAÇÕES DE IA =====

# Provedor de IA (ollama|huggingface|openai|custom)
AI_PROVIDER="ollama"

# OpenAI (opcional - para comparação ou fallback)
OPENAI_API_KEY="sk-your-openai-key-here"
OPENAI_MODEL="gpt-4o-mini"

# Ollama (local - RECOMENDADO)
OLLAMA_HOST="http://localhost:11434"
OLLAMA_MODEL="llama3.1:8b"

# Hugging Face (gratuito com limitações)
HUGGINGFACE_TOKEN="hf_your-token-here"
HF_MODEL="microsoft/DialoGPT-medium"

# Modelos Customizados (treinamento próprio)
CUSTOM_MODELS_PATH="./models"

# Configurações de Performance
AI_TIMEOUT="30000"
AI_MAX_RETRIES="3"
AI_ENABLE_CACHE="true"